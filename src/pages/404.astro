---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Page Not Found | Clear Retro">
  <div class="min-h-screen flex flex-col items-center justify-center p-4">
    <div class="text-center">
      <h1
        class="text-9xl font-black text-gray-200 dark:text-gray-800 font-mono mb-4"
      >
        404
      </h1>
      <h2
        class="text-3xl font-bold text-gray-900 dark:text-white mb-6 font-mono"
      >
        Page Not Found
      </h2>
      <p
        class="text-gray-600 dark:text-gray-400 max-w-lg mx-auto mb-10 text-lg"
      >
        The retrospective board you are looking for might have been moved,
        deleted, or never existed.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/"
          class="inline-flex justify-center items-center px-6 py-3 border border-transparent text-base font-bold rounded-xl text-white bg-brand-600 hover:bg-brand-700 transition-colors shadow-lg shadow-brand-500/20 font-mono"
        >
          Go Home
        </a>
        <a
          href="/templates"
          class="inline-flex justify-center items-center px-6 py-3 border border-gray-200 dark:border-gray-700 text-base font-bold rounded-xl text-gray-700 dark:text-gray-200 bg-white dark:bg-dark-800 hover:bg-gray-50 dark:hover:bg-dark-700 transition-colors font-mono"
        >
          View Templates
        </a>
      </div>
    </div>
  </div>
</Layout>
